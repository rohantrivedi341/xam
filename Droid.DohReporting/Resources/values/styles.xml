<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:icon">@android:color/transparent</item>

    <item name="android:textColor">@android:color/black</item>
    <item name="android:textColorPrimary">@android:color/black</item>

    <item name="android:actionBarItemBackground">@drawable/selectable_background_dohreporting</item>
    <item name="android:popupMenuStyle">@style/PopupMenu.DohReporting</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView.DohReporting</item>
    <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.DohReporting</item>
    <item name="android:actionDropDownStyle">@style/DropDownNav.DohReporting</item>
    <item name="android:actionBarStyle">@style/ActionBar.Solid.DohReporting</item>
    <item name="android:actionModeBackground">@drawable/cab_background_top_dohreporting</item>
    <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_dohreporting</item>
    <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.DohReporting</item>
    <item name="android:actionBarWidgetTheme">@style/Theme.DohReporting.Widget</item>
    <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.DohReporting</item>
  </style>

  <style name="ActionBarTabTextStyle.DohReporting" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="ActionBar.Solid.DohReporting" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@drawable/ab_solid_dohreporting</item>
    <item name="android:backgroundStacked">@drawable/ab_stacked_solid_dohreporting</item>
    <item name="android:backgroundSplit">@drawable/ab_bottom_solid_dohreporting</item>
    <item name="android:progressBarStyle">@style/ProgressBar.DohReporting</item>
  </style>

  <style name="ActionBar.Transparent.DohReporting" parent="@android:style/Widget.Holo.ActionBar">
    <item name="android:background">@drawable/ab_transparent_dohreporting</item>
    <item name="android:progressBarStyle">@style/ProgressBar.DohReporting</item>
  </style>

  <style name="PopupMenu.DohReporting" parent="@android:style/Widget.Holo.ListPopupWindow">
    <item name="android:popupBackground">@drawable/menu_dropdown_panel_dohreporting</item>
  </style>

  <style name="DropDownListView.DohReporting" parent="@android:style/Widget.Holo.ListView.DropDown">
    <item name="android:listSelector">@drawable/selectable_background_dohreporting</item>
  </style>

  <style name="ActionBarTabStyle.DohReporting" parent="@android:style/Widget.Holo.ActionBar.TabView">
    <item name="android:background">@drawable/tab_indicator_ab_dohreporting</item>
  </style>

  <style name="DropDownNav.DohReporting" parent="@android:style/Widget.Holo.Spinner">
    <item name="android:background">@drawable/spinner_background_ab_dohreporting</item>
    <item name="android:popupBackground">@drawable/menu_dropdown_panel_dohreporting</item>
    <item name="android:dropDownSelector">@drawable/selectable_background_dohreporting</item>
  </style>

  <style name="ProgressBar.DohReporting" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
    <item name="android:progressDrawable">@drawable/progress_horizontal_dohreporting</item>
  </style>

  <style name="ActionButton.CloseMode.DohReporting" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
    <item name="android:background">@drawable/btn_cab_done_dohreporting</item>
  </style>

  <style name="Theme.DohReporting.Widget" parent="@android:style/Theme.Holo">
    <item name="android:popupMenuStyle">@style/PopupMenu.DohReporting</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView.DohReporting</item>
  </style>
</resources>