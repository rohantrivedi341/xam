<?xml version="1.0" encoding="UTF-8" ?>
<resources>
  <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:icon">@android:color/transparent</item>

    <item name="android:textColor">@android:color/black</item>
    <item name="android:textColorPrimary">@android:color/black</item>
    
    <item name="android:actionBarItemBackground">@drawable/selectable_background_tb</item>
    <item name="android:popupMenuStyle">@style/PopupMenu.Tb</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView.Tb</item>
    <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Tb</item>
    <item name="android:actionDropDownStyle">@style/DropDownNav.Tb</item>
    <item name="android:actionBarStyle">@style/ActionBar.Solid.Tb</item>
    <item name="android:actionModeBackground">@drawable/cab_background_top_tb</item>
    <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_tb</item>
    <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tb</item>
    <item name="android:actionBarWidgetTheme">@style/Theme.Tb.Widget</item>
    <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Tb</item>
  </style>

  <style name="ActionBarTabTextStyle.Tb" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="ActionBar.Solid.Tb" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@drawable/ab_solid_tb</item>
    <item name="android:backgroundStacked">@drawable/ab_stacked_solid_tb</item>
    <item name="android:backgroundSplit">@drawable/ab_bottom_solid_tb</item>
    <item name="android:progressBarStyle">@style/ProgressBar.Tb</item>
  </style>

  <style name="ActionBar.Transparent.Tb" parent="@android:style/Widget.Holo.ActionBar">
    <item name="android:background">@drawable/ab_transparent_tb</item>
    <item name="android:progressBarStyle">@style/ProgressBar.Tb</item>
  </style>

  <style name="PopupMenu.Tb" parent="@android:style/Widget.Holo.ListPopupWindow">
    <item name="android:popupBackground">@drawable/menu_dropdown_panel_tb</item>
  </style>

  <style name="DropDownListView.Tb" parent="@android:style/Widget.Holo.ListView.DropDown">
    <item name="android:listSelector">@drawable/selectable_background_tb</item>
  </style>

  <style name="ActionBarTabStyle.Tb" parent="@android:style/Widget.Holo.ActionBar.TabView">
    <item name="android:background">@drawable/tab_indicator_ab_tb</item>
  </style>

  <style name="DropDownNav.Tb" parent="@android:style/Widget.Holo.Spinner">
    <item name="android:background">@drawable/spinner_background_ab_tb</item>
    <item name="android:popupBackground">@drawable/menu_dropdown_panel_tb</item>
    <item name="android:dropDownSelector">@drawable/selectable_background_tb</item>
  </style>

  <style name="ProgressBar.Tb" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
    <item name="android:progressDrawable">@drawable/progress_horizontal_tb</item>
  </style>

  <style name="ActionButton.CloseMode.Tb" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
    <item name="android:background">@drawable/btn_cab_done_tb</item>
  </style>

  <style name="Theme.Tb.Widget" parent="@android:style/Theme.Holo">
    <item name="android:popupMenuStyle">@style/PopupMenu.Tb</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView.Tb</item>
  </style>
</resources>