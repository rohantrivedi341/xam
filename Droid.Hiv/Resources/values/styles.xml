<?xml version="1.0" encoding="UTF-8" ?>
<resources>
  <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:icon">@android:color/transparent</item>

    <item name="android:textColor">@android:color/black</item>
    <item name="android:textColorPrimary">@android:color/black</item>
    
    <item name="android:actionBarItemBackground">@drawable/selectable_background_hiv</item>
    <item name="android:popupMenuStyle">@style/PopupMenu.Hiv</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView.Hiv</item>
    <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Hiv</item>
    <item name="android:actionDropDownStyle">@style/DropDownNav.Hiv</item>
    <item name="android:actionBarStyle">@style/ActionBar.Solid.Hiv</item>
    <item name="android:actionModeBackground">@drawable/cab_background_top_hiv</item>
    <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_hiv</item>
    <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Hiv</item>
    <item name="android:actionBarWidgetTheme">@style/Theme.Hiv.Widget</item>
    <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Hiv</item>
  </style>

  <style name="ActionBarTabTextStyle.Hiv" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="ActionBar.Solid.Hiv" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@drawable/ab_solid_hiv</item>
    <item name="android:backgroundStacked">@drawable/ab_stacked_solid_hiv</item>
    <item name="android:backgroundSplit">@drawable/ab_bottom_solid_hiv</item>
    <item name="android:progressBarStyle">@style/ProgressBar.Hiv</item>
  </style>

  <style name="ActionBar.Transparent.Hiv" parent="@android:style/Widget.Holo.ActionBar">
    <item name="android:background">@drawable/ab_transparent_hiv</item>
    <item name="android:progressBarStyle">@style/ProgressBar.Hiv</item>
  </style>

  <style name="PopupMenu.Hiv" parent="@android:style/Widget.Holo.ListPopupWindow">
    <item name="android:popupBackground">@drawable/menu_dropdown_panel_hiv</item>
  </style>

  <style name="DropDownListView.Hiv" parent="@android:style/Widget.Holo.ListView.DropDown">
    <item name="android:listSelector">@drawable/selectable_background_hiv</item>
  </style>

  <style name="ActionBarTabStyle.Hiv" parent="@android:style/Widget.Holo.ActionBar.TabView">
    <item name="android:background">@drawable/tab_indicator_ab_hiv</item>
  </style>

  <style name="DropDownNav.Hiv" parent="@android:style/Widget.Holo.Spinner">
    <item name="android:background">@drawable/spinner_background_ab_hiv</item>
    <item name="android:popupBackground">@drawable/menu_dropdown_panel_hiv</item>
    <item name="android:dropDownSelector">@drawable/selectable_background_hiv</item>
  </style>

  <style name="ProgressBar.Hiv" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
    <item name="android:progressDrawable">@drawable/progress_horizontal_hiv</item>
  </style>

  <style name="ActionButton.CloseMode.Hiv" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
    <item name="android:background">@drawable/btn_cab_done_hiv</item>
  </style>

  <style name="Theme.Hiv.Widget" parent="@android:style/Theme.Holo">
    <item name="android:popupMenuStyle">@style/PopupMenu.Hiv</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView.Hiv</item>
  </style>
</resources>